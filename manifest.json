{
  "manifest_version": 3,
  "name": "Dual Monitor Tab Move",
  "version": "1.1.0",
  "description": "Fast move of active tab to next monitor with maximized screen restore.",
  "permissions": [
    "tabs",
    "windows",
    "system.display"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "incognito": "split",
  "commands": {
    "move-normal": {
      "suggested_key": { "default": "Ctrl+Shift+1" },
      "description": "Normal → Normal (next monitor)"
    },
    "move-incog": {
      "suggested_key": { "default": "Ctrl+Shift+2" },
      "description": "Incognito → Incognito (next monitor)"
    }
  }
}



